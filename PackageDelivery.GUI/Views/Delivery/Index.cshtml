@model IEnumerable<PackageDelivery.GUI.Models.Core.DeliveryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Envios</h2>

<p>
    @Html.ActionLink("Agregar Nuevo", "Create")
</p>
<p>
    @Html.ActionLink("Reporte", "Delivery_Report")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_DestinationAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Package)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_DeliveryStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Sender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_TransportType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationAddressName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryStatusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SenderName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransportTypeName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @Class = "btn btn-warning" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @Class = "btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
