@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Entidades Principales<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Paquetes", "Index", "Package")</li>
            <li>@Html.ActionLink("Envios", "index", "Delivery")</li>
            <li>@Html.ActionLink("Historial Paquetes", "Index", "PackageHistory")</li>
        </ul>
    </li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Entidades Secundarias<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Departamentos", "Index", "Department")</li>
            <li>@Html.ActionLink("Municipios", "Index", "City")</li>
            <li>@Html.ActionLink("Tipos Documento", "Index", "DocumentType")</li>
            <li>@Html.ActionLink("Personas", "Index", "Person")</li>
            <li>@Html.ActionLink("Oficinas", "Index", "Office")</li>
            <li>@Html.ActionLink("Bodegas", "Index", "Warehouse")</li>
            <li>@Html.ActionLink("Direcciones", "Index", "Address")</li>
            <li>@Html.ActionLink("Estados envío", "Index", "DeliveryStatus")</li>
            <li>@Html.ActionLink("Tipos Transporte", "Index", "TransportType")</li>
            <li>@Html.ActionLink("Vehiculos", "Index", "Vehicle")</li>
        </ul>
    </li>
    <li>
        @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
